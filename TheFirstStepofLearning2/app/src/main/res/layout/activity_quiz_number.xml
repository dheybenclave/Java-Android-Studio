<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#bee075"
    android:layout_height="match_parent"
    tools:context="com.example.lenovo.thefirststepoflearning.QuizNumber">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txtNumHighName"
            android:textSize="25dp"
            android:text="High Score:"
            android:textColor="#000000"
            android:layout_marginLeft="170dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txtNumHighScore"
            android:textSize="25dp"
            android:text="0"
            android:textColor="#000000"
            android:layout_marginLeft="320dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txtLetterSequence"
            android:text="2. Match the number"
            android:textColor="#000000"
            android:textSize="25dp"
            android:layout_marginTop="50dp"
            android:layout_below="@id/lnHighScore"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/lnNum1"
            android:layout_marginTop="20dp"
            android:layout_below="@id/txtLetterSequence"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/txtNum1"
                android:layout_marginLeft="19dp"
                android:textColor="#000000"
                android:layout_width="40dp"
                android:layout_height="50dp" />
            <TextView
                android:textSize="25dp"
                android:text="Number 1"
                android:textColor="#000000"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="25dp"
                android:text="A. Three"
                android:textColor="#000000"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="80dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lnNum2"
            android:layout_marginTop="20dp"
            android:layout_below="@id/lnNum1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/txtNum2"
                android:layout_marginLeft="19dp"
                android:textColor="#000000"
                android:layout_width="40dp"
                android:layout_height="50dp" />
            <TextView
                android:textSize="25dp"
                android:text="Number 2"
                android:textColor="#000000"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="25dp"
                android:text="B. Four"
                android:textColor="#000000"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="80dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lnNum3"
            android:layout_marginTop="20dp"
            android:layout_below="@id/lnNum2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/txtNum3"
                android:layout_marginLeft="19dp"
                android:textColor="#000000"
                android:layout_width="40dp"
                android:layout_height="50dp" />
            <TextView
                android:textSize="25dp"
                android:text="Number 3"
                android:textColor="#000000"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="25dp"
                android:text="C. Two"
                android:textColor="#000000"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="80dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lnNum4"
            android:layout_marginTop="20dp"
            android:layout_below="@id/lnNum3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/txtNum4"
                android:layout_marginLeft="19dp"
                android:textColor="#000000"
                android:layout_width="40dp"
                android:layout_height="50dp" />
            <TextView
                android:textSize="25dp"
                android:text="Number 4"
                android:textColor="#000000"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="25dp"
                android:text="D. One"
                android:textColor="#000000"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="80dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lnNum5"
            android:layout_marginTop="20dp"
            android:layout_below="@id/lnNum4"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/txtNum5"
                android:layout_marginLeft="19dp"
                android:textColor="#000000"
                android:layout_width="40dp"
                android:layout_height="50dp" />
            <TextView
                android:textSize="25dp"
                android:text="Number 5"
                android:textColor="#000000"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="25dp"
                android:text="E. Five"
                android:textColor="#000000"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="80dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <Button
            android:id="@+id/btnSaveNum"
            android:layout_below="@id/lnNum5"
            android:text="Save"
            android:onClick="ResultNum"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="120dp"
            android:layout_width="150dp"
            android:layout_height="50dp" />
    </RelativeLayout>
</ScrollView>
