<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#bee075"
    android:layout_height="match_parent"
    tools:context="com.example.lenovo.thefirststepoflearning.Quiz">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/lnHighScore"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/txtQuiz"
                android:text="High Score:"
                android:textSize="19dp"
                android:textColor="#000000"
                android:layout_marginLeft="230dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/txtScore"
                android:text="0"
                android:textSize="19dp"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:id="@+id/txtLetterSequence"
            android:text="1. Letter Sequence"
            android:textColor="#000000"
            android:textSize="25dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/lnHighScore"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:id="@+id/lnLetterSequence"
            android:layout_width="match_parent"
            android:layout_below="@id/txtLetterSequence"
            android:orientation="horizontal"
            android:layout_height="match_parent">
            <TextView
                android:text="A"
                android:layout_marginLeft="30dp"
                android:textSize="30dp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="B"
                android:layout_marginLeft="30dp"
                android:textSize="30dp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/txtC"
                android:layout_marginLeft="30dp"
                android:textColor="#000000"
                android:textSize="30dp"
                android:layout_width="40dp"
                android:layout_height="55dp" />
            <TextView
                android:text="D"
                android:layout_marginLeft="30dp"
                android:textSize="30dp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="E"
                android:layout_marginLeft="30dp"
                android:textSize="30dp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/txtF"
                android:layout_marginLeft="30dp"
                android:textColor="#000000"
                android:textSize="30dp"
                android:layout_width="40dp"
                android:layout_height="55dp" />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/lnLetterSequence2"
            android:layout_width="match_parent"
            android:layout_below="@id/lnLetterSequence"
            android:orientation="horizontal"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/txtG"
                android:layout_marginLeft="20dp"
                android:textColor="#000000"
                android:textSize="30dp"
                android:layout_width="40dp"
                android:layout_height="55dp" />
            <TextView
                android:text="H"
                android:layout_marginLeft="20dp"
                android:textSize="30dp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/txtI"
                android:layout_marginLeft="28dp"
                android:textColor="#000000"
                android:textSize="30dp"
                android:layout_width="40dp"
                android:layout_height="55dp" />
            <TextView
                android:text="J"
                android:layout_marginLeft="30dp"
                android:textSize="30dp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="K"
                android:layout_marginLeft="30dp"
                android:textSize="30dp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/txtL"
                android:layout_marginLeft="30dp"
                android:textColor="#000000"
                android:textSize="30dp"
                android:layout_width="40dp"
                android:layout_height="55dp" />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/lnLetterSequence3"
            android:layout_width="match_parent"
            android:layout_below="@id/lnLetterSequence2"
            android:orientation="horizontal"
            android:layout_height="match_parent">
            <TextView
                android:text="M"
                android:layout_marginLeft="30dp"
                android:textSize="30dp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="N"
                android:layout_marginLeft="25dp"
                android:textSize="30dp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="O"
                android:layout_marginLeft="35dp"
                android:textSize="30dp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/txtP"
                android:layout_marginLeft="30dp"
                android:textColor="#000000"
                android:textSize="30dp"
                android:layout_width="40dp"
                android:layout_height="55dp" />

            <TextView
                android:text="Q"
                android:layout_marginLeft="20dp"
                android:textSize="30dp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/txtR"
                android:layout_marginLeft="25dp"
                android:textColor="#000000"
                android:textSize="30dp"
                android:layout_width="40dp"
                android:layout_height="55dp" />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/lnLetterSequence4"
            android:layout_width="match_parent"
            android:layout_below="@id/lnLetterSequence3"
            android:orientation="horizontal"
            android:layout_height="match_parent">
            <TextView
                android:text="S"
                android:layout_marginLeft="30dp"
                android:textSize="30dp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/txtT"
                android:layout_marginLeft="23dp"
                android:textColor="#000000"
                android:textSize="30dp"
                android:layout_width="40dp"
                android:layout_height="55dp" />

            <TextView
                android:text="U"
                android:layout_marginLeft="27dp"
                android:textSize="30dp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="V"
                android:layout_marginLeft="40dp"
                android:textSize="30dp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/txtW"
                android:layout_marginLeft="25dp"
                android:textColor="#000000"
                android:textSize="30dp"
                android:layout_width="40dp"
                android:layout_height="55dp" />
            <TextView
                android:text="X"
                android:layout_marginLeft="25dp"
                android:textSize="30dp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/lnLetterSequence5"
            android:layout_width="match_parent"
            android:layout_below="@id/lnLetterSequence4"
            android:orientation="horizontal"
            android:layout_height="match_parent">
            <TextView
                android:text="Y"
                android:layout_marginLeft="150dp"
                android:textSize="30dp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/txtZ"
                android:layout_marginLeft="23dp"
                android:textColor="#000000"
                android:textSize="30dp"
                android:layout_width="40dp"
                android:layout_height="55dp" />


        </LinearLayout>


        <Button
            android:id="@+id/btnPass"
            android:text="Save"
            android:onClick="Pass"
            android:layout_width="150dp"
            android:layout_marginTop="20dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/lnLetterSequence5"
            android:layout_height="40dp" />
    </RelativeLayout>

</ScrollView>
