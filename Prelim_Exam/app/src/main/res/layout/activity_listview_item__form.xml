<?xml version="1.0" encoding="utf-8"?>


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.dheoclaveria.prelim_exam.ListviewItem_Form">

        <LinearLayout
            android:id="@+id/pnlitem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">

            <TextView
                android:id="@+id/imgperson"
                android:layout_width="85px"
                android:layout_height="120px"
                android:layout_marginLeft="9px"
                android:layout_weight="0"
                android:background="@drawable/high"
                android:text="id"
                android:textColor="#fff"
                android:textSize="0px" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:layout_gravity="center"
                android:gravity="center"

                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/lbltitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="20"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:layout_marginLeft="2px"
                        android:layout_marginRight="20px"
                        android:text="Title"
                        android:textColor="#fff"
                        android:textSize="33px" />

                    <TextView
                        android:id="@+id/lblfrmdate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="80"
                        android:text="From date"
                        android:textColor="#fff"
                        android:textSize="18px" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/lbldetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="20"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="Details"
                        android:textColor="#fff"
                        android:layout_marginLeft="2px"
                        android:layout_marginRight="20px"
                        android:textSize="22px" />

                    <TextView
                        android:id="@+id/lbltodate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="80"
                        android:text="To date"
                        android:textColor="#fff"
                        android:textSize="18px" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
