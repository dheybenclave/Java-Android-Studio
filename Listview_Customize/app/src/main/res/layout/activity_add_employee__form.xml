<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dheoclaveria.listview_customize.AddEmployee_Form">

    <LinearLayout
        android:layout_margin="20px"
        android:orientation="vertical"
        android:id="@+id/lnldetalis"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:textColor="#2e8b57"
            android:layout_width="89dp"
            android:layout_height="wrap_content"
            android:layout_margin="10px"
            android:textSize="26px"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:text="ID Number :" />

        <EditText
            android:id="@+id/txtaddid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#2e8b57"
            android:textSize="30px"
            android:layout_weight="70"
            android:hint="input your fullname here.."/>
        </LinearLayout>

        <TextView
            android:textColor="#2e8b57"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10px"
            android:textSize="26px"
            android:text="Full name :" />

        <EditText
            android:id="@+id/txtaddfullname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#2e8b57"
            android:textSize="30px"
            android:hint="input your fullname here.."/>

        <TextView
            android:textColor="#2e8b57"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10px"
            android:textSize="26px"
            android:text="Position :" />

        <EditText
            android:id="@+id/txtaddposition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#2e8b57"
            android:textSize="30px"
            android:hint="input your position here.."/>
        <TextView
            android:textColor="#2e8b57"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10px"
            android:textSize="26px"
            android:text="Address :" />

        <EditText
            android:id="@+id/txtaddaddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#2e8b57"
            android:textSize="30px"
            android:hint="input your address here.."/>

        <TextView
            android:textColor="#2e8b57"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10px"
            android:textSize="26px"
            android:inputType="phone"
            android:text="Mobile :" />

        <EditText
            android:id="@+id/txtaddmobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#2e8b57"
            android:textSize="30px"
            android:hint="input your mobile number here.."/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10px"
            android:text="Email :"
            android:textColor="#2e8b57"
            android:textSize="26px" />

        <EditText
            android:id="@+id/txtemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#2e8b57"
            android:textSize="30px"
            android:inputType="textEmailAddress"
            android:hint="input your email here.."/>

    </LinearLayout>

    <Button
        android:id="@+id/btnsave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ADD EMPLOYEE"
        android:layout_below="@+id/lnldetalis"
        android:background="#2e8b57"
        android:layout_margin="20px"
        android:textColor="#d3f4e1"
        android:layout_alignParentStart="true" />

</RelativeLayout>
