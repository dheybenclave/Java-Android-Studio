<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#de097e40"
    tools:context="com.example.nienie.myfavoriteplaces.MainLogin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="50px"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50px"
                android:layout_marginTop="50px"
                android:text="Enter your username and password."
                android:textAlignment="center"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/etUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Enter your username"
                android:textSize="30px"
                android:textColor="#fff"
                android:inputType="textPersonName"/>

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"

                android:textSize="30px"
                android:textColor="#fff"
                android:focusedByDefault="false"
                android:hint="Enter your password"
                android:inputType="textPassword" />

            <Button
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LOG IN TO MY ACCOUNT"
                android:background="@drawable/curve_save"
                android:textSize="30px"
                android:layout_marginTop="20px"
                android:textColor="#fff"

                android:textStyle="bold" />





        </LinearLayout>
    </RelativeLayout>
</ScrollView>
